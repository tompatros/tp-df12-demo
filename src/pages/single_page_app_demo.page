							{{/if}}
							<hr />
							<div class="description">{{combatant2.attributes.Description__c}}</div>
							<hr />
							<button style="float: right;" class="btn btn-large btn-success btn-combatant2-winner">Winner!</button>
							<button style="float: left;" class="btn btn-large btn-history">History</button>
							<br style="clear: both;" />
						</div>
					</div>
				</div>

			</div>
		</script>
		
		<script id="combatant-template" type="text/x-handlebars-template">
			<div class="span5 combatant">
				<div class="well">
					<h2>{{Name}}</h2>
					{{#if Picture__c}}
						<img src="{{Picture__c}}" />
					{{/if}}
					<hr />
					<div class="description">{{Description__c}}</div>
					<hr />
					<button data-sfid="{{Id}}" style="float: right;" class="btn btn-large btn-success btn-winner">Winner!</button>
					<button data-sfid="{{Id}}" style="float: left;" class="btn btn-large btn-history">History</button>
					<br style="clear: both;" />
				</div>
			</div>
		</script>
		
		<script id="modal-history-template" type="text/x-handlebars-template">
			<div class="modal-header">
				<h3>History</h3>
			</div>
			<div class="modal-body">
				<table class="table">
					<tr>
						<th>Date</th>
						<th>Winner</th>
						<th>Loser</th>
					</tr>
					{{#each .}}
						<tr>
							<td>{{CreatedDate}}</td>
							<td>{{Winner__r.Name}}</td>
							<td>{{Loser__r.Name}}</td>
						</tr>
					{{/each}}
				</table>
			</div>
			<div class="modal-footer">
				<a href="#" class="btn" data-dismiss="modal">Close</a>
			</div>
		</script>
	
